{
	"name": "@opencage/mcp-opencage-server",
	"version": "1.0.4",
	"description": "MCP server for OpenCage geocoding API",
	"author": {
		"name": "OpenCage GmbH",
		"url": "https://www.opencagedata.com"
	},
	"keywords": [
		"mcp",
		"geocoding",
		"opencage"
	],
	"main": "build/index.js",
