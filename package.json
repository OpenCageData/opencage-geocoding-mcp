		"lint": "eslint .",
		"start": "node build/index.js"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.12.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.27.0",
		"@types/node": "^22.15.23",
		"eslint": "^9.27.0",
		"globals": "^16.2.0",
		"prettier": "^3.5.3",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.33.0"
	},
	"files": [
		"build"
	]
}
